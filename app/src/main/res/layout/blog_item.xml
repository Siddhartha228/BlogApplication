<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"

    android:layout_margin="8dp"
    android:background="@drawable/rounded_border"
    android:layout_gravity="center">

    <!-- Blog Title -->
    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blog Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="8dp" />

    <!-- Blog Description Preview -->
    <TextView
        android:id="@+id/blogPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short description of the blog..."
        android:textSize="14sp"
        android:textColor="@color/darkGray"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:paddingBottom="12dp" />

    <!-- Buttons in a Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <!-- Read More Button -->
        <Button
            android:id="@+id/readMoreBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Read More"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:padding="8dp" />

        <!-- Update Button (Visible only in BlogFragment) -->
        <Button
            android:id="@+id/updateBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Update"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_secondary"
            android:padding="8dp"
            android:visibility="gone" /> <!-- Hidden by default -->

        <!-- Delete Button (Visible only in BlogFragment) -->
        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_delete"
            android:padding="8dp"
            android:visibility="gone" /> <!-- Hidden by default -->

    </LinearLayout>

</LinearLayout>
