<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Blog Title -->
    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blog Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Blog Description Preview -->
    <TextView
        android:id="@+id/blogPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short description of the blog"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Buttons in a Horizontal LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="8dp">

        <!-- Read More Button -->
        <Button
            android:id="@+id/readMoreBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Read More" />

        <!-- Update Button (Visible only in BlogFragment) -->
        <Button
            android:id="@+id/updateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:visibility="gone" /> <!-- Hidden by default -->

        <!-- Delete Button (Visible only in BlogFragment) -->
        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:visibility="gone" /> <!-- Hidden by default -->

    </LinearLayout>
</LinearLayout>
